snippet func
	func! ${1:function_name}(${2}) abort
		${3}
	endfunc
snippet for
	for ${1:needle} in ${2:haystack}
		${3:" code}
	endfor
snippet wh
	while ${1:condition}
		${2:" code}
	endw
snippet if
	if ${1:condition}
		${2:" code}
	endif
snippet ife
	if ${1:condition}
		${2}
	else
		${3}
	endif
snippet au
	au ${1:BufRead} ${2:*} ${3:echo "hello"}
snippet aug
	augroup ${1:GROUP_NAME} | au!
	    ${2}
	augroup END
